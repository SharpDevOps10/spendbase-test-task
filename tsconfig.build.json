{
  "extends": "./tsconfig.json",
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@utils/*": [
        "utils/*"
      ],
      "@database/*": [
        "database/*"
      ],
      "@enums/*": [
        "enums/*"
      ],
      "@weather/*": [
        "modules/weather/*"
      ],
      "@app/*": [
        "modules/app/*"
      ]
    }
  }
}
